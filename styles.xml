<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#D32F2F</item>
    </style>

    <!-- Custom text appearance -->
    <style name="scoreButton" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textButton" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="editName" parent="@android:style/TextAppearance">
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>